@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="6" Color="Color.Info">
        <img src="logo-png.png" style="width: 125px; margin-top: 8px;" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pt-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private readonly MudTheme _currentTheme = new()
        {
            Palette = new Palette
            {
                Primary = "#5200FF",
                Secondary = "#B897FF",
                Info = "#FFFFFF",
                Success = "#2ECC40",
                Warning = "#FFC107",
                Error = "#FF0000",
                AppbarBackground = "#FFFFFF",
                TextPrimary = "#222222",
                TextSecondary = "#373737",
            }
        };
}


<style>
@@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans');

    body {
        font-family: 'Plus Jakarta Sans';
    }
        
</style>